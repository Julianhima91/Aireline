{
  "rewrites": [
    {
      "source": "/sitemap.xml",
      "destination": "/api/sitemap-index"
    },
    {
      "source": "/sitemaps/page-:page.xml",
      "destination": "/api/sitemap-page"
    }
  ],
  "functions": {
    "api/sitemap-index.js": {
      "maxDuration": 10
    },
    "api/sitemap-page.js": {
      "maxDuration": 60
    }
  }
}
